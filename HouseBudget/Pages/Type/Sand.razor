@page "/Sand"
@using HouseBudget.Data
@inject HouseBudgetService3 houseBudgetService3


<h3>Sand</h3>



<form class="mt-5">


<div class="row">

       <div class="col">
        <label class="control-label"> Id </label>
        <input class="form-control" @bind="@newEntry3.Id" />
    </div>

    <div class="col">
        <label class="control-label"> Description </label>
        <input class="form-control" @bind="@newEntry3.Description" />
    </div>

     <div class="col">
        <label class="control-label"> Unit </label>
        <input class="form-control" @bind="@newEntry3.Unit" />
    </div>

     <div class="col">
        <label class="control-label"> Quantity </label>
        <input class="form-control" @bind="@newEntry3.Quantity" />
    </div>

     <div class="col">
        <label class="control-label"> Price </label>
        <input class="form-control" @bind="@newEntry3.Price" />
    </div>

      <div class="col">
        <label class="control-label"> Date </label>
        <input class="form-control" @bind="@newEntry3.Date" />
    </div>

</div>
<br/><br/>
<div class="row mt-2">
    <div class="col">
        <Button class="btn btn-primary btn-lg" onclick="@CreateEntry3"> Add </Button>
    </div>

    <br/>

</div>
</form>

<hr/>

<table class ="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>

             <th>
                Id
            </th>
            
            <th>
                Description
            </th>

            <th>
               Unit
            </th>

            <th>
                Quantity
            </th>
            <th>
                Price
            </th>
            <th>
                Date
            </th>
        </tr>
        
                    </thead>

        <tbody>
            @foreach(Entry3 entry3 in allEntries3)
            {
                <tr>
                     <td>
                        @entry3.Id
                    </td>

                    <td>
                        @entry3.Description
                    </td>
                    <td>
                        @entry3.Unit
                    </td>
                    <td>
                        @entry3.Quantity
                    </td>
                    <td>
                        @entry3.Price
                    </td>
                    <td>
                        @entry3.Date
                    </td>
                </tr>
            }
        </tbody>
    
</table>
<br/><br/>
<div class="text-black san">

 <h2 class="san"> Total Quantity =  @allEntries3.Sum(i=>i.Quantity) </h2>
   


 <h2 class="san1"> Total Price =   @allEntries3.Sum(i=>i.Price) $ </h2>
 </div>






@code {

    List<Entry3> allEntries3 = new List<Entry3>();

    Entry3 newEntry3 = new Entry3();
    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();

        allEntries3 = await houseBudgetService3.GetAllEntries3();

    }
    protected async void CreateEntry3()
    {
        await houseBudgetService3.AddEntry3(newEntry3);
    }

 
   


}


