@page "/IronConstruction"
@using HouseBudget.Data
@inject HouseBudgetService1 houseBudgetService1

<h3>IronConstruction</h3>



<form class="mt-5">


<div class="row">

       <div class="col">
        <label class="control-label"> Id </label>
        <input class="form-control" @bind="@newEntry1.Id" />
    </div>

    <div class="col">
        <label class="control-label"> Description </label>
        <input class="form-control" @bind="@newEntry1.Description" />
    </div>

     <div class="col">
        <label class="control-label"> Unit </label>
        <input class="form-control" @bind="@newEntry1.Unit" />
    </div>

     <div class="col">
        <label class="control-label"> Quantity </label>
        <input class="form-control" @bind="@newEntry1.Quantity" />
    </div>

     <div class="col">
        <label class="control-label"> Price </label>
        <input class="form-control" @bind="@newEntry1.Price" />
    </div>

      <div class="col">
        <label class="control-label"> Date </label>
        <input class="form-control" @bind="@newEntry1.Date" />
    </div>

</div>
<br/><br/>
<div class="row mt-2">
    <div class="col">
        <Button class="btn btn-primary btn-lg" onclick="@CreateEntry1"> Add </Button>
    </div>

    <br/>

</div>
</form>

<hr/>

<table class ="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>

             <th>
                Id
            </th>
            
            <th>
                Description
            </th>

            <th>
               Unit
            </th>

            <th>
                Quantity
            </th>
            <th>
                Price
            </th>
            <th>
                Date
            </th>
        </tr>
        
                    </thead>

        <tbody>
            @foreach(Entry1 entry1 in allEntries1)
            {
                <tr>
                     <td>
                        @entry1.Id
                    </td>

                    <td>
                        @entry1.Description
                    </td>
                    <td>
                        @entry1.Unit
                    </td>
                    <td>
                        @entry1.Quantity
                    </td>
                    <td>
                        @entry1.Price
                    </td>
                    <td>
                        @entry1.Date
                    </td>
                </tr>
            }
        </tbody>
    
</table>
<br/><br/>
<div class="text-black san">

 <h2 class="san"> Total Quantity =  @allEntries1.Sum(i=>i.Quantity) </h2>
   


 <h2 class="san1"> Total Price =   @allEntries1.Sum(i=>i.Price) $ </h2>
 </div>






@code {

    List<Entry1> allEntries1 = new List<Entry1>();

    Entry1 newEntry1 = new Entry1();
    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();

        allEntries1 = await houseBudgetService1.GetAllEntries1();

    }
    protected async void CreateEntry1()
    {
        await houseBudgetService1.AddEntry1(newEntry1);
    }

 
   


}



