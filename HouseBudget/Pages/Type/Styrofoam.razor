@page "/Styrofoam"
@using HouseBudget.Data
@inject HouseBudgetService4 houseBudgetService4

<h3>Styrofoam</h3>



<form class="mt-5">


<div class="row">

       <div class="col">
        <label class="control-label"> Id </label>
        <input class="form-control" @bind="@newEntry4.Id" />
    </div>

    <div class="col">
        <label class="control-label"> Description </label>
        <input class="form-control" @bind="@newEntry4.Description" />
    </div>

     <div class="col">
        <label class="control-label"> Unit </label>
        <input class="form-control" @bind="@newEntry4.Unit" />
    </div>

     <div class="col">
        <label class="control-label"> Quantity </label>
        <input class="form-control" @bind="@newEntry4.Quantity" />
    </div>

     <div class="col">
        <label class="control-label"> Price </label>
        <input class="form-control" @bind="@newEntry4.Price" />
    </div>

      <div class="col">
        <label class="control-label"> Date </label>
        <input class="form-control" @bind="@newEntry4.Date" />
    </div>

</div>
<br/><br/>
<div class="row mt-2">
    <div class="col">
        <Button class="btn btn-primary btn-lg" onclick="@CreateEntry4"> Add </Button>
    </div>

    <br/>

</div>
</form>

<hr/>

<table class ="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>

             <th>
                Id
            </th>
            
            <th>
                Description
            </th>

            <th>
               Unit
            </th>

            <th>
                Quantity
            </th>
            <th>
                Price
            </th>
            <th>
                Date
            </th>
        </tr>
        
                    </thead>

        <tbody>
            @foreach(Entry4 entry4 in allEntries4)
            {
                <tr>
                     <td>
                        @entry4.Id
                    </td>

                    <td>
                        @entry4.Description
                    </td>
                    <td>
                        @entry4.Unit
                    </td>
                    <td>
                        @entry4.Quantity
                    </td>
                    <td>
                        @entry4.Price
                    </td>
                    <td>
                        @entry4.Date
                    </td>
                </tr>
            }
        </tbody>
    
</table>
<br/><br/>
<div class="text-black san">

 <h2 class="san"> Total Quantity =  @allEntries4.Sum(i=>i.Quantity) </h2>
   


 <h2 class="san1"> Total Price =   @allEntries4.Sum(i=>i.Price) $ </h2>
 </div>






@code {

    List<Entry4> allEntries4 = new List<Entry4>();

    Entry4 newEntry4 = new Entry4();
    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();

        allEntries4 = await houseBudgetService4.GetAllEntries4();

    }
    protected async void CreateEntry4()
    {
        await houseBudgetService4.AddEntry4(newEntry4);
    }

 
   


}


